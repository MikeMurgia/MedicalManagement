<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.MedicalManagement.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.MedicalManagement"
    Title="Maui.MedicalManagement">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#3244a8" HeightRequest="120" Padding="20">
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="Medical Management" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Main Navigation Items -->
    <FlyoutItem Title="Home" Icon="{OnPlatform Default=''}">
        <ShellContent 
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Patients" Icon="{OnPlatform Default=''}">
        <ShellContent 
            Title="Patients"
            ContentTemplate="{DataTemplate local:PatientsPage}"
            Route="PatientsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Physicians" Icon="{OnPlatform Default=''}">
        <ShellContent 
            Title="Physicians"
            ContentTemplate="{DataTemplate local:PhysiciansPage}"
            Route="PhysiciansPage" />
    </FlyoutItem>

    <FlyoutItem Title="Appointments" Icon="{OnPlatform Default=''}">
        <ShellContent 
            Title="Appointments"
            ContentTemplate="{DataTemplate local:AppointmentsPage}"
            Route="AppointmentsPage" />
    </FlyoutItem>

</Shell>

