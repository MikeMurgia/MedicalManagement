<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MedicalManagement.MainPage"
             Title="Medical Management System"
             BackgroundColor="#FFFFFF">

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <VerticalStackLayout Grid.Row="0" Spacing="10">
                <Label Text="Medical Management System" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#3244a8"/>
                <BoxView HeightRequest="2" 
                         Color="#E0E0E0" 
                         Margin="0,10"/>
            </VerticalStackLayout>

            <!-- Navigation -->
            <Border Grid.Row="1" 
                    BackgroundColor="#FFFFFF"
                    Stroke="#BDBDBD"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="20">
                <Border.Shadow>
                    <Shadow Brush="#000000" Offset="2,2" Radius="5" Opacity="0.15"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                    <Label Text="Navigation" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="#424242"/>

                    <Grid ColumnSpacing="10" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Add Patient Button -->
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="Add Patient"
                                BackgroundColor="#3244a8"
                                TextColor="White"
                                Clicked="AddPatientClicked"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <!-- Manage Patients Button -->
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Manage Patients"
                                BackgroundColor="#2d1e6b"
                                TextColor="White"
                                Clicked="ManagePatientsClicked"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <!-- Schedule Appointments Button -->
                        <Button Grid.Row="2" Grid.Column="0"
                                Text="Schedule Appointment"
                                BackgroundColor="#c23029"
                                TextColor="White"
                                Clicked="ScheduleAppointmentClicked"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <!-- Manage Physicians Button -->
                        <Button Grid.Row="1" Grid.Column="1"
                                Text="Manage Physicians"
                                BackgroundColor="#1b6326"
                                TextColor="White"
                                Clicked="ManagePhysiciansClicked"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <!-- Manage Appointments Button -->
                        <Button Grid.Row="2" Grid.Column="1"
                                Text="Manage Appointments"
                                BackgroundColor="#701c18"
                                TextColor="White"
                                Clicked="ViewAppointmentsClicked"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <!-- Add Physician Button -->
                        <Button Grid.Row="1" Grid.Column="0"
                                Text="Add Physician"
                                BackgroundColor="#32ba47"
                                TextColor="White"
                                Clicked="AddPhysicianClicked"
                                CornerRadius="8"
                                HeightRequest="50"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>



        </Grid>
    </ScrollView>

</ContentPage>