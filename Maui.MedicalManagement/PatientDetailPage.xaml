<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MedicalManagement.PatientDetailPage"
             Title="Patient Details">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Label Text="Patient Information" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Frame BackgroundColor="#F5F5F5" 
                   BorderColor="#383838"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Name:" FontAttributes="Bold"/>
                    <Entry Text="{Binding Patient.Name}" 
                           Placeholder="Enter patient name"/>

                    <Label Text="Address:" FontAttributes="Bold"/>
                    <Entry Text="{Binding Patient.Address}" 
                           Placeholder="Enter address"/>

                    <Label Text="Birth Date:" FontAttributes="Bold"/>
                    <DatePicker Date="{Binding Patient.Birthdate}" />

                    <Label Text="Gender:" FontAttributes="Bold"/>
                    <Picker SelectedItem="{Binding Patient.Gender}">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Male</x:String>
                                <x:String>Female</x:String>
                                <x:String>Other</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Label Text="Race:" FontAttributes="Bold"/>
                    <Entry Text="{Binding Patient.Race}" 
                           Placeholder="Enter race"/>

                    <Label Text="Diagnoses:" FontAttributes="Bold"/>
                    <Editor Text="{Binding Diagnoses}" 
                            Placeholder="Enter diagnoses"
                            HeightRequest="100"/>

                    <Label Text="Prescriptions:" FontAttributes="Bold"/>
                    <Editor Text="{Binding Prescriptions}" 
                            Placeholder="Enter prescriptions"
                            HeightRequest="100"/>

                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="Save" 
                        Clicked="SaveClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        WidthRequest="120"/>

                <Button Text="Cancel" 
                        Clicked="CancelClicked"
                        BackgroundColor="#757575"
                        TextColor="White"
                        WidthRequest="120"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
