<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MedicalManagement.PhysicianDetailPage"
             Title="Physician Details"
             BackgroundColor="#FAFAFA">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Label Text="Physician Information" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#212121"/>

            <Border BackgroundColor="#FFFFFF" 
                   Stroke="#BDBDBD"
                   Padding="15"
                   StrokeShape="RoundRectangle 10"
                   Shadow="True">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Name:" FontAttributes="Bold" TextColor="#424242"/>
                    <Entry Text="{Binding Physician.Name}" 
                           Placeholder="Enter physician name"
                           PlaceholderColor="#9E9E9E"
                           TextColor="#212121"
                           BackgroundColor="#FAFAFA"/>

                    <Label Text="License Number:" FontAttributes="Bold" TextColor="#424242"/>
                    <Entry Text="{Binding Physician.License}" 
                           Placeholder="Enter license number"
                           PlaceholderColor="#9E9E9E"
                           TextColor="#212121"
                           BackgroundColor="#FAFAFA"/>

                    <Label Text="Graduation Date:" FontAttributes="Bold" TextColor="#424242"/>
                    <DatePicker Date="{Binding Physician.GraduationDate}" 
                                TextColor="#212121"
                                BackgroundColor="#FAFAFA"/>

                    <Label Text="Specializations:" FontAttributes="Bold" TextColor="#424242"/>
                    <Entry Text="{Binding Physician.Specializations}" 
                           Placeholder="Enter specializations (comma-separated)"
                           PlaceholderColor="#9E9E9E"
                           TextColor="#212121"
                           BackgroundColor="#FAFAFA"/>

                </VerticalStackLayout>
            </Border>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="Save" 
                        Clicked="SaveClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        WidthRequest="120"/>

                <Button Text="Cancel" 
                        Clicked="CancelClicked"
                        BackgroundColor="#757575"
                        TextColor="White"
                        WidthRequest="120"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
