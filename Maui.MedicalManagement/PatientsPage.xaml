<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MedicalManagement.PatientsPage"
             Title="Patients"
             BackgroundColor="#FFFFFF"
             NavigatedTo="ContentPage_NavigatedTo">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">

        <!-- Search Bar -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10" Margin="0,10">
            <Entry x:Name="SearchEntry" 
                   Grid.Column="0"
                   Placeholder="Search by name or address..." 
                   PlaceholderColor="#9E9E9E"
                   TextColor="#212121"
                   BackgroundColor="#FAFAFA"/>
            <Button Grid.Column="1"
                    Text="Search" 
                    Clicked="SearchClicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"/>
            <Button Grid.Column="2"
                    Text="Add New" 
                    Clicked="AddClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"/>
        </Grid>

        <!-- Patients List -->
        <CollectionView Grid.Row="1" 
                        x:Name="PatientsCollection"
                        ItemsSource="{Binding Patients}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedPatient}"
                        Margin="0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" 
                           Padding="10" 
                           BackgroundColor="#FFFFFF"
                           BorderColor="#BDBDBD"
                           CornerRadius="8"
                           HasShadow="True">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Model.Name}" 
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#212121"/>
                                <Label Text="{Binding Model.Address}" 
                                       TextColor="#757575"
                                       FontSize="13"/>
                                <HorizontalStackLayout>
                                    <Label Text="DOB: " 
                                           TextColor="#757575" 
                                           FontSize="12"/>
                                    <Label Text="{Binding Model.Birthdate, StringFormat='{0:MM/dd/yyyy}'}" 
                                           TextColor="#757575" 
                                           FontSize="12"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <HorizontalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                                <Button Text="Edit" 
                                        Clicked="EditItemClicked"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#2196F3"
                                        TextColor="White"
                                        Padding="10,5"
                                        FontSize="12"/>
                                <Button Text="Delete" 
                                        Clicked="DeleteItemClicked"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#F44336"
                                        TextColor="White"
                                        Padding="10,5"
                                        FontSize="12"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                    <Label Text="No patients found" 
                           FontSize="18" 
                           TextColor="#757575"
                           HorizontalOptions="Center"/>
                    <Label Text="Add a new patient or adjust your search"
                           FontSize="14"
                           TextColor="#9E9E9E"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Actions Bar -->
        <HorizontalStackLayout Grid.Row="2" 
                               HorizontalOptions="Center" 
                               Spacing="10"
                               Margin="0,10">
            <Button Text="Refresh" 
                    Clicked="RefreshClicked"
                    BackgroundColor="#FF9800"
                    TextColor="White"/>
            <Button Text="Clear Search" 
                    Clicked="ClearSearchClicked"
                    BackgroundColor="#757575"
                    TextColor="White"/>
        </HorizontalStackLayout>

    </Grid>

</ContentPage>

