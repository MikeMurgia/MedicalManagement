<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MedicalManagement.PatientsPage"
             Title="Patients"
             NavigatedTo="ContentPage_NavigatedTo">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">

        <!-- Search Bar -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="0,10">
            <Entry x:Name="SearchEntry" 
                   Placeholder="Search patients..." 
                   HorizontalOptions="FillAndExpand"/>
            <Button Text="Search" 
                    Clicked="SearchClicked"
                    BackgroundColor="#2196F3"/>
            <Button Text="Add New" 
                    Clicked="AddClicked"
                    BackgroundColor="#4CAF50"/>
        </HorizontalStackLayout>

        <!-- Patients List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Patients}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedPatient}"
                        Margin="0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" 
                           Padding="10" 
                           BackgroundColor="#F5F5F5"
                           BorderColor="#3D3D3D">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Model.Display}" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Model.Address}" 
                                       TextColor="Gray"
                                       FontSize="12"/>
                                <HorizontalStackLayout>
                                    <Label Text="DOB: " TextColor="Gray" FontSize="12"/>
                                    <Label Text="{Binding Model.Birthdate, StringFormat='{0:MM/dd/yyyy}'}" 
                                           TextColor="Gray" 
                                           FontSize="12"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <HorizontalStackLayout Grid.Column="1" Spacing="5">
                                <Button Text="Edit" 
                                        Command="{Binding EditCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#2196F3"
                                        TextColor="White"
                                        Padding="5"/>
                                <Button Text="Delete" 
                                        Command="{Binding DeleteCommand}"
                                        BackgroundColor="#F44336"
                                        TextColor="White"
                                        Padding="5"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Actions Bar -->
        <HorizontalStackLayout Grid.Row="2" 
                               HorizontalOptions="Center" 
                               Spacing="10"
                               Margin="0,10">
            <Button Text="Refresh" 
                    Clicked="RefreshClicked"
                    BackgroundColor="#FF9800"/>
            <Button Text="Export" 
                    Clicked="ExportClicked"
                    BackgroundColor="#9C27B0"/>
            <Button Text="Import" 
                    Clicked="ImportClicked"
                    BackgroundColor="#3F51B5"/>
        </HorizontalStackLayout>

    </Grid>

</ContentPage>
