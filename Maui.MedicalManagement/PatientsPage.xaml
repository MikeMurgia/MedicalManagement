<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MedicalManagement.PatientsPage"
             Title="Patients"
             BackgroundColor="#FFFFFF"
             NavigatedTo="ContentPage_NavigatedTo">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">

        <!-- Search Bar -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="0,10">
            <Entry x:Name="SearchEntry" 
                   Placeholder="Search patients..." 
                   PlaceholderColor="#9E9E9E"
                   TextColor="#212121"
                   BackgroundColor="#FAFAFA"/>
            <Button Text="Search" 
                    Clicked="SearchClicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"/>
            <Button Text="Add New" 
                    Clicked="AddClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"/>
        </HorizontalStackLayout>

        <!-- Patients List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Patients}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedPatient}"
                        Margin="0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" 
                           Padding="10" 
                           BackgroundColor="#FFFFFF"
                           Stroke="#BDBDBD"
                           StrokeShape="RoundRectangle 8"
                           Shadow="True">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Model.Display}" 
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#212121"/>
                                <Label Text="{Binding Model.Address}" 
                                       TextColor="#757575"
                                       FontSize="13"/>
                                <HorizontalStackLayout>
                                    <Label Text="DOB: " 
                                           TextColor="#757575" 
                                           FontSize="12"/>
                                    <Label Text="{Binding Model.Birthdate, StringFormat='{0:MM/dd/yyyy}'}" 
                                           TextColor="#757575" 
                                           FontSize="12"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <HorizontalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                                <Button Text="Edit" 
                                        Command="{Binding EditCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#2196F3"
                                        TextColor="White"
                                        Padding="10,5"
                                        FontSize="12"/>
                                <Button Text="Delete" 
                                        Command="{Binding DeleteCommand}"
                                        BackgroundColor="#F44336"
                                        TextColor="White"
                                        Padding="10,5"
                                        FontSize="12"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Actions Bar -->
        <HorizontalStackLayout Grid.Row="2" 
                               HorizontalOptions="Center" 
                               Spacing="10"
                               Margin="0,10">
            <Button Text="Refresh" 
                    Clicked="RefreshClicked"
                    BackgroundColor="#FF9800"
                    TextColor="White"/>
            <Button Text="Export" 
                    Clicked="ExportClicked"
                    BackgroundColor="#9C27B0"
                    TextColor="White"/>
            <Button Text="Import" 
                    Clicked="ImportClicked"
                    BackgroundColor="#3F51B5"
                    TextColor="White"/>
        </HorizontalStackLayout>

    </Grid>

</ContentPage>
